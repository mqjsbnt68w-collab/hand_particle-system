<p class="p1"><span class="Apple-converted-space">Â  </span>&lt;!-- Three.js --&gt;</p>
<p class="p1"><span class="Apple-converted-space">Â  </span>&lt;script src="https://cdn.jsdelivr.net/npm/three@0.155.0/build/three.min.js"&gt;&lt;/script&gt;</p>
<p class="p2"><br></p>
<p class="p1"><span class="Apple-converted-space">Â  </span>&lt;!-- MediaPipe Hands --&gt;</p>
<p class="p1"><span class="Apple-converted-space">Â  </span>&lt;script src="https://cdn.jsdelivr.net/npm/@mediapipe/hands/hands.js"&gt;&lt;/script&gt;</p>
<p class="p1"><span class="Apple-converted-space">Â  </span>&lt;script src="https://cdn.jsdelivr.net/npm/@mediapipe/camera_utils/camera_utils.js"&gt;&lt;/script&gt;</p>
<p class="p2"><br></p>
<p class="p1"><span class="Apple-converted-space">Â  </span>&lt;script&gt;</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  </span>/* ==========================</p>
<p class="p1"><span class="Apple-converted-space">Â Â  Â  Â  </span>THREE.JS SETUP</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  </span>========================== */</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  </span>const scene = new THREE.Scene();</p>
<p class="p2"><br></p>
<p class="p1"><span class="Apple-converted-space">Â  Â  </span>const camera = new THREE.PerspectiveCamera(</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  Â  </span>60,</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  Â  </span>window.innerWidth / window.innerHeight,</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  Â  </span>0.1,</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  Â  </span>1000</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  </span>);</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  </span>camera.position.z = 5;</p>
<p class="p2"><br></p>
<p class="p1"><span class="Apple-converted-space">Â  Â  </span>const renderer = new THREE.WebGLRenderer({ antialias: true });</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  </span>renderer.setSize(window.innerWidth, window.innerHeight);</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  </span>document.body.appendChild(renderer.domElement);</p>
<p class="p2"><br></p>
<p class="p1"><span class="Apple-converted-space">Â  Â  </span>/* ==========================</p>
<p class="p1"><span class="Apple-converted-space">Â Â  Â  Â  </span>PARTICLES</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  </span>========================== */</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  </span>const COUNT = 6000;</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  </span>const geometry = new THREE.BufferGeometry();</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  </span>const positions = new Float32Array(COUNT * 3);</p>
<p class="p2"><br></p>
<p class="p1"><span class="Apple-converted-space">Â  Â  </span>for (let i = 0; i &lt; COUNT; i++) {</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  Â  </span>positions[i * 3] <span class="Apple-converted-space">Â  Â  </span>= (Math.random() - 0.5) * 2;</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  Â  </span>positions[i * 3 + 1] = (Math.random() - 0.5) * 2;</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  Â  </span>positions[i * 3 + 2] = (Math.random() - 0.5) * 2;</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  </span>}</p>
<p class="p2"><br></p>
<p class="p1"><span class="Apple-converted-space">Â  Â  </span>geometry.setAttribute(</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  Â  </span>"position",</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  Â  </span>new THREE.BufferAttribute(positions, 3)</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  </span>);</p>
<p class="p2"><br></p>
<p class="p1"><span class="Apple-converted-space">Â  Â  </span>const material = new THREE.PointsMaterial({</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  Â  </span>color: 0x3399ff, <span class="Apple-converted-space">Â  </span>// ğŸ”µ BLUE PARTICLES</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  Â  </span>size: 0.025</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  </span>});</p>
<p class="p2"><br></p>
<p class="p1"><span class="Apple-converted-space">Â  Â  </span>const particles = new THREE.Points(geometry, material);</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  </span>scene.add(particles);</p>
<p class="p2"><br></p>
<p class="p1"><span class="Apple-converted-space">Â  Â  </span>/* ==========================</p>
<p class="p1"><span class="Apple-converted-space">Â Â  Â  Â  </span>SHAPES</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  </span>========================== */</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  </span>function heartShape(i, scale) {</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  Â  </span>const t = (i / COUNT) * Math.PI * 2;</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  Â  </span>return {</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  Â  Â  </span>x: scale * 0.16 * Math.pow(Math.sin(t), 3),</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  Â  Â  </span>y: scale * (</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  Â  Â  Â  </span>0.13 * Math.cos(t) -</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  Â  Â  Â  </span>0.05 * Math.cos(2 * t) -</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  Â  Â  Â  </span>0.02 * Math.cos(3 * t) -</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  Â  Â  Â  </span>0.01 * Math.cos(4 * t)</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  Â  Â  </span>),</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  Â  Â  </span>z: 0</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  Â  </span>};</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  </span>}</p>
<p class="p2"><br></p>
<p class="p1"><span class="Apple-converted-space">Â  Â  </span>function flowerShape(i, scale) {</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  Â  </span>const t = (i / COUNT) * Math.PI * 2;</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  Â  </span>const r = Math.sin(6 * t) * 0.4 + 1;</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  Â  </span>return {</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  Â  Â  </span>x: scale * r * Math.cos(t),</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  Â  Â  </span>y: scale * r * Math.sin(t),</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  Â  Â  </span>z: 0</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  Â  </span>};</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  </span>}</p>
<p class="p2"><br></p>
<p class="p1"><span class="Apple-converted-space">Â  Â  </span>/* ==========================</p>
<p class="p1"><span class="Apple-converted-space">Â Â  Â  Â  </span>MORPHING</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  </span>========================== */</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  </span>let targetShape = "heart";</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  </span>let expansion = 1;</p>
<p class="p2"><br></p>
<p class="p1"><span class="Apple-converted-space">Â  Â  </span>function updateParticles() {</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  Â  </span>const pos = geometry.attributes.position.array;</p>
<p class="p2"><br></p>
<p class="p1"><span class="Apple-converted-space">Â  Â  Â  </span>for (let i = 0; i &lt; COUNT; i++) {</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  Â  Â  </span>const p =</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  Â  Â  Â  </span>targetShape === "heart"</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  Â  Â  Â  Â  </span>? heartShape(i, expansion)</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  Â  Â  Â  Â  </span>: flowerShape(i, expansion);</p>
<p class="p2"><br></p>
<p class="p1"><span class="Apple-converted-space">Â  Â  Â  Â  </span>pos[i * 3] <span class="Apple-converted-space">Â  Â  </span>+= (p.x - pos[i * 3]) * 0.06;</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  Â  Â  </span>pos[i * 3 + 1] += (p.y - pos[i * 3 + 1]) * 0.06;</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  Â  Â  </span>pos[i * 3 + 2] += (p.z - pos[i * 3 + 2]) * 0.06;</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  Â  </span>}</p>
<p class="p2"><br></p>
<p class="p1"><span class="Apple-converted-space">Â  Â  Â  </span>geometry.attributes.position.needsUpdate = true;</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  </span>}</p>
<p class="p2"><br></p>
<p class="p1"><span class="Apple-converted-space">Â  Â  </span>/* ==========================</p>
<p class="p1"><span class="Apple-converted-space">Â Â  Â  Â  </span>HAND TRACKING</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  </span>========================== */</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  </span>const hands = new Hands({</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  Â  </span>locateFile: file =&gt;</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  Â  Â  </span>`https://cdn.jsdelivr.net/npm/@mediapipe/hands/${file}`</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  </span>});</p>
<p class="p2"><br></p>
<p class="p1"><span class="Apple-converted-space">Â  Â  </span>hands.setOptions({</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  Â  </span>maxNumHands: 1,</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  Â  </span>minDetectionConfidence: 0.7,</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  Â  </span>minTrackingConfidence: 0.7</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  </span>});</p>
<p class="p2"><br></p>
<p class="p1"><span class="Apple-converted-space">Â  Â  </span>let lastSwitch = 0;</p>
<p class="p2"><br></p>
<p class="p1"><span class="Apple-converted-space">Â  Â  </span>hands.onResults(results =&gt; {</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  Â  </span>if (!results.multiHandLandmarks.length) return;</p>
<p class="p2"><br></p>
<p class="p1"><span class="Apple-converted-space">Â  Â  Â  </span>const lm = results.multiHandLandmarks[0];</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  Â  </span>const thumbTip = lm[4];</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  Â  </span>const indexTip = lm[8];</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  Â  </span>const palm = lm[0];</p>
<p class="p2"><br></p>
<p class="p1"><span class="Apple-converted-space">Â  Â  Â  </span>// ğŸ¤ PINCH = CHANGE SHAPE</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  Â  </span>const pinch = Math.hypot(</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  Â  Â  </span>thumbTip.x - indexTip.x,</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  Â  Â  </span>thumbTip.y - indexTip.y</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  Â  </span>);</p>
<p class="p2"><br></p>
<p class="p1"><span class="Apple-converted-space">Â  Â  Â  </span>const now = Date.now();</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  Â  </span>if (pinch &lt; 0.04 &amp;&amp; now - lastSwitch &gt; 800) {</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  Â  Â  </span>targetShape = targetShape === "heart" ? "flower" : "heart";</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  Â  Â  </span>lastSwitch = now;</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  Â  </span>}</p>
<p class="p2"><br></p>
<p class="p1"><span class="Apple-converted-space">Â  Â  Â  </span>// âœ‹ OPEN HAND = EXPAND</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  Â  </span>const openness = Math.abs(indexTip.y - palm.y);</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  Â  </span>expansion = THREE.MathUtils.clamp(openness * 4, 0.6, 2.3);</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  </span>});</p>
<p class="p2"><br></p>
<p class="p1"><span class="Apple-converted-space">Â  Â  </span>/* ==========================</p>
<p class="p1"><span class="Apple-converted-space">Â Â  Â  Â  </span>CAMERA INPUT</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  </span>========================== */</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  </span>const video = document.getElementById("video");</p>
<p class="p2"><br></p>
<p class="p1"><span class="Apple-converted-space">Â  Â  </span>const cam = new Camera(video, {</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  Â  </span>onFrame: async () =&gt; {</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  Â  Â  </span>await hands.send({ image: video });</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  Â  </span>},</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  Â  </span>width: 640,</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  Â  </span>height: 480</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  </span>});</p>
<p class="p2"><br></p>
<p class="p1"><span class="Apple-converted-space">Â  Â  </span>cam.start();</p>
<p class="p2"><br></p>
<p class="p1"><span class="Apple-converted-space">Â  Â  </span>/* ==========================</p>
<p class="p1"><span class="Apple-converted-space">Â Â  Â  Â  </span>ANIMATION LOOP</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  </span>========================== */</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  </span>function animate() {</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  Â  </span>requestAnimationFrame(animate);</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  Â  </span>updateParticles();</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  Â  </span>particles.rotation.y += 0.002;</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  Â  </span>renderer.render(scene, camera);</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  </span>}</p>
<p class="p2"><br></p>
<p class="p1"><span class="Apple-converted-space">Â  Â  </span>animate();</p>
<p class="p2"><br></p>
<p class="p1"><span class="Apple-converted-space">Â  Â  </span>/* ==========================</p>
<p class="p1"><span class="Apple-converted-space">Â Â  Â  Â  </span>RESIZE</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  </span>========================== */</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  </span>window.addEventListener("resize", () =&gt; {</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  Â  </span>camera.aspect = window.innerWidth / window.innerHeight;</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  Â  </span>camera.updateProjectionMatrix();</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  Â  </span>renderer.setSize(window.innerWidth, window.innerHeight);</p>
<p class="p1"><span class="Apple-converted-space">Â  Â  </span>});</p>
<p class="p1"><span class="Apple-converted-space">Â  </span>&lt;/script&gt;</p>
